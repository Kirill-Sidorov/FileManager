<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/javafx" fx:controller="com.sidorov.filemanager.controller.FileTableController">
    <HBox>
        <ComboBox fx:id="diskComboBox" onAction="#selectDiskComboBox" onMouseClicked="#clickDiskComboBox" />
        <ProgressBar fx:id="tableLoadProgressBar" styleClass="progress-bar-table-load" progress="0.0" maxWidth="Infinity" visible="true" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox>
        <Label styleClass="label-file-system-info" text="%ui.label.total_space" />
        <Label fx:id="driveTotalSpaceLabel" styleClass="label-file-system-info" />
        <Label styleClass="label-file-system-info" text="%ui.label.unallocated_space" />
        <Label fx:id="driveUnallocatedSpaceLabel" styleClass="label-file-system-info" />
    </HBox>
    <HBox>
        <Button fx:id="previousDirectoryButton" onAction="#clickPreviousDirectoryButton" styleClass="button-previous" />
        <TextField fx:id="pathTextField" editable="false" focusTraversable="false" HBox.hgrow="ALWAYS" />
        <Button onAction="#clickRefreshButton" styleClass="button-refresh" />
    </HBox>
    <TableView fx:id="fileTableView" onMouseClicked="#clickOnItemTableView" VBox.vgrow="ALWAYS" />
</VBox>
