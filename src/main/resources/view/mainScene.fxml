<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="1000.0" stylesheets="/style/styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sidorov.filemanager.controller.FileManagerController">
    <MenuBar>
        <Menu text="%ui.menu_bar.menu.google_drive" onAction="#clickAddGoogleDrive"/>
    </MenuBar>
    <HBox VBox.vgrow="ALWAYS">
        <fx:include fx:id="leftFileTable" source="fileTable.fxml" HBox.hgrow="ALWAYS"/>
        <fx:include fx:id="rightFileTable" source="fileTable.fxml" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox>
        <Button fx:id="copyButton" onAction="#copyFileButton" text="%ui.button.copy_file" HBox.hgrow="ALWAYS" maxWidth="Infinity" focusTraversable="false"/>
        <Button fx:id="moveButton" onAction="#moveFileButton" text="%ui.button.move_file" HBox.hgrow="ALWAYS" maxWidth="Infinity" focusTraversable="false"/>
        <Button fx:id="createDirectoryButton" onAction="#createDirectoryButton" text="%ui.button.create_directory" HBox.hgrow="ALWAYS" maxWidth="Infinity" focusTraversable="false"/>
        <Button fx:id="renameButton" onAction="#renameButton" text="%ui.button.rename_file" HBox.hgrow="ALWAYS" maxWidth="Infinity" focusTraversable="false"/>
        <Button fx:id="deleteButton" onAction="#deleteButton" text="%ui.button.delete_file" HBox.hgrow="ALWAYS" maxWidth="Infinity" focusTraversable="false"/>
    </HBox>
</VBox>
